@{
    ViewData["Title"] = "Event";
}

<div class="container-fluid position-relative" style="background: url(https://www.ikeva.com/wp-content/uploads/2016/01/BeerDieEvents.jpg); background-size: cover; background-position: center; height: 30vh; width: 100%;">
    <div class="row h-100">
        <div class="col text-white position-absolute" style="bottom: 10px">
            <h1 class="display-4">Event</h1>
            <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand"><i class="bi bi-house-fill" style="font-size: 1.5rem;"></i></a><i style="font-size: 1.5rem">/ Event</i>
        </div>
    </div>
</div>

<div class="container my-8">
    <div class="d-flex justify-content-between align-items-center mb-3 filters-header">
        <h5 class="d-flex align-items-center">
            <i class="bi bi-list me-2 text-primary" style="font-size: 1.5rem;"></i>
            <span class="filter-title">Filters</span>
        </h5>
        <button type="button" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-clockwise me-1"></i> Reset Filters
        </button>
    </div>

    <div id="filterForm" style="display: none;">
        <form>
            <div class="row g-3 mb-3">
                <div class="col-md-3">
                    <label for="searchEvent" class="form-label">Search Event</label>
                    <input type="text" class="form-control" id="searchEvent" placeholder="Type Event Name/Venue/City/State">
                </div>
                <div class="col-md-3">
                    <label for="category" class="form-label">Category</label>
                    <select class="form-control" id="category">
                        <option>All</option>
                        <option>Music & Concerts</option>
                        <option>Business & Seminars</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="date" class="form-label">Date</label>
                    <input type="date" class="form-control" id="date" placeholder="Date Filter">
                </div>
                <div class="col-md-3">
                    <label for="country" class="form-label">Country</label>
                    <select class="form-control" id="country">
                        <option>All</option>
                        <option>USA</option>
                        <option>Canada</option>
                    </select>
                </div>
            </div>
            <div class="row g-3">
                <div class="col-md-3">
                    <label for="state" class="form-label">State</label>
                    <select class="form-control" id="state">
                        <option>All</option>
                        <option>California</option>
                        <option>Texas</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="city" class="form-label">City</label>
                    <select class="form-control" id="city">
                        <option>All</option>
                        <option>New York</option>
                        <option>Los Angeles</option>
                    </select>
                </div>
            </div>
        </form>
    </div>
</div>

@using Web.Authorize
<nav class="side-menu open position-fixed overflow-hidden d-flex flex-column">
	<a asp-area="Dashboard" asp-controller="Statistics" asp-action="Index" class="dashboard-shortcut d-flex align-items-center text-decoration-none">
		<div style="width: 30px; height: 30px; margin-left: 17px">
			<img style="object-fit: contain" class="w-100 h-100" src="https://eventmie.classiebit.com/storage/settings/February2024/kLnsc9P2UQfpHIrkzQC4.png" />
		</div>
		<span style="height: fit-content; width: fit-content" class="text-light">Eventmie 3.0</span>
		<svg class="dashboard-wave-bg" viewBox="0 0 250 79" preserveAspectRatio="xMinYMin meet">
			<path d="M0,70 C75,110 180,0 290,110 L250,00 L0,0 Z"></path>
		</svg>
	</a>
	<div class="dashboard-information d-flex align-items-center overflow-hidden">
		<div style="width: 44px; height: 44px; margin-left: 9px">
			<img class="w-100 h-100" src="https://www.svgrepo.com/show/420329/anime-away-face.svg" />
		</div>
		<!--dashboard model-->
		<span style="height: fit-content; width: fit-content; font-size: 20px">Admin</span>
	</div>
	<div class="dashboard-menu-list-item w-100 h-100 overflow-y-auto">
		<ul class="w-100 list-unstyled">
			<li class="dashboard-menu-item @ViewBag.Statistics @(!ViewBag.Permissions[EPermission.Statistics] ? "d-none" : "")">
				<a asp-area="Dashboard" asp-controller="Statistics" asp-action="Index" class="text-reset text-decoration-none w-100 h-100">
					<div class="h-100 d-flex justify-content-center menu-icon">
						<i class="fa-solid fa-chart-line"></i>
					</div>
					<span>Statistics</span>
				</a>
			</li>
			<li class="dashboard-menu-item @ViewBag.ManageEvents @(!ViewBag.Permissions[EPermission.Event] ? "d-none" : "")">
				<a class="text-reset text-decoration-none w-100 h-100 icon group">
					<div class="h-100 d-flex justify-content-center menu-icon">
						<i class="fa-solid fa-store"></i>
					</div>
					<span>Manage Events</span>
				</a>
				<div>
					<ul class="item-child collapse list-unstyled">
						<li class="dashboard-menu-item @ViewBag.Event">
							<a asp-area="Dashboard" asp-controller="Event" asp-action="Index" class="text-reset text-decoration-none w-100 h-100">
								<div class="h-100 d-flex justify-content-center menu-icon ms-4">
									<i class="fa-solid fa-calendar-days"></i>
								</div>
								<span>Events</span>
							</a>
						</li>
						<li class="dashboard-menu-item @ViewBag.Category">

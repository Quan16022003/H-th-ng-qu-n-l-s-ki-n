@{
	ViewData["Title"] = "Add Category";
	ViewBag.Current = "Categories";
	ViewBag.ManageEvents = "selected";
	ViewBag.Category = "selected";
}

@Html.AntiForgeryToken()
<div class="w-100 h-100">
	<form method="post" class="dashboard-form dashboard-category-form w-100 h-100">
		<div class="dashboard-category-img w-100 d-flex justify-content-center">
			<img class="d-block"
				 src="/images/categories/science&tech.webp" />
			<div class="choose-img-button-container">
				<div class="choose-img-button btn p-2 position-relative">
					<i class="fa-solid fa-image"></i>
					Add Image
					<input type="file"
						   id="imageFile"
						   name="imageFile"
						   required
						   accept=".jpg, .jpeg, .png, .webp"
						   class="opacity-0 position-absolute w-100 h-100 top-0 start-0" />
				</div>
			</div>
		</div>
		<div class="dashboard-category-divider w-100 d-flex justify-content-center">
			<hr />
		</div>
		<div class="w-100 d-flex justify-content-center">
			<div class="dashboard-category-content shadow">
				<label for="name">Name</label>
				<input id="name"
					   name="name"
					   type="text"
					   required
					   maxlength="100"
					   class="form-control remove-border-focus" />
				<label for="description">Description</label>
				<textarea id="description"
						  name="description"
						  required
						  style="min-height: 300px; max-height: 400px; resize: none"
						  class="form-control remove-border-focus"></textarea>
				<div class="mt-4">
					<button type="submit"
							class="dashboard-submit-button btn btn-primary rounded-4 shadow bg-light-green border-0 bubble-hover">
						<i class="fa-solid fa-plus"></i>
						Create
					</button>
				</div>
			</div>
		</div>
	</form>
</div>

@section Scripts {
	<script type="module" asp-append-version="true" src="~/js/dashboard/dashboard-category.js"></script>
}
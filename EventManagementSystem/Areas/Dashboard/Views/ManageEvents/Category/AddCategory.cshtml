@model Constracts.EventCategory.EventCategoryCreationDto
@{
	ViewData["Title"] = "Add Category";
	ViewBag.Current = "Categories";
	ViewBag.IsInManageEvents = "selected";
	ViewBag.IsInCategory = "selected";
}

@Html.AntiForgeryToken()
<div class="w-100 h-100">
	<form method="post" class="dashboard-form dashboard-category-form add-form w-100 h-100">
		@await Html.PartialAsync("./Partials/_ImageInput")
		<div class="dashboard-category-divider w-100 d-flex justify-content-center">
			<hr />
		</div>
		<div class="w-100 d-flex justify-content-center">
			<div class="dashboard-category-content shadow">
				<label asp-for="Name">Name</label>
				<input 
						asp-for="Name"
						type="text"
					   required
					   maxlength="100"
					   class="form-control remove-border-focus" />
				<label asp-for="Description">Description</label>
				<textarea asp-for="Description"
						  required
						  style="min-height: 300px; max-height: 400px; resize: none"
						  class="form-control remove-border-focus"></textarea>
				<div class="mt-4">
					<button type="submit"
							class="dashboard-submit-button btn btn-primary rounded-4 shadow bg-light-green border-0 bubble-hover">
						<i class="fa-solid fa-plus"></i>
						Create
					</button>
				</div>
			</div>
		</div>
	</form>
</div>

@section Scripts {
	<script type="module" asp-append-version="true" src="~/js/dashboard/dashboard-category.js"></script>
}
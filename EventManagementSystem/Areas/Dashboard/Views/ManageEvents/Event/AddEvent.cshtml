@{
	ViewData["Title"] = "Add Event";
	ViewBag.Current = "Events";
	ViewBag.ManageEvents = "selected";
	ViewBag.Event = "selected";
}

<div class="w-100 h-100">
	<form method="post" class="dashboard-form dashboard-event-form w-100 h-100">
		@await Html.PartialAsync("./Partials/_ImageInput")
		<div class="dashboard-category-divider w-100 d-flex justify-content-center">
			<hr />
		</div>
		<div class="w-100 d-flex justify-content-center">
			<div class="dashboard-event-content">
				<label for="title">Title</label>
				<input id="title" name="title" type="text" class="form-control remove-border-focus" />
			</div>
		</div>
	</form>
</div>


@section Scripts {
	<script type="module" asp-append-version="true" src="~/js/dashboard/dashboard-event.js"></script>
}
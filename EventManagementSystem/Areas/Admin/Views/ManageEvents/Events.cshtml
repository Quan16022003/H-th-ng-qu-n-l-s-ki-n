@model IEnumerable<Domain.Entities.Events>
@{
	ViewData["Title"] = "Events";
	ViewBag.Current = "Events";
	ViewBag.ManageEvents = "selected";
	ViewBag.Event = "selected";
}

<div class="w-100 h-100" style="background-color: #F2F2F2">
	<section class="w-100 d-flex justify-content-center">
		<div class="d-flex flex-wrap" style="width: 95%; gap: 20px">
			<div class="admin-page-title d-flex align-items-center justify-content-end" style="height: 120px">
				<div class="admin-page-title-icon"><i class="fa-solid fa-calendar-days"></i></div>
				<span>@ViewData["Title"]</span>
			</div>
			<div class="admin-actions d-flex align-items-center" style="height: 120px">
				<button class="admin-action-add rounded-4 btn btn-primary">
					<i class="fa-solid fa-circle-plus"></i>
					Add
				</button>
			</div>
		</div>
	</section>
	<section class="d-flex justify-content-center w-100">
		<div class="admin-page-content d-flex flex-column align-items-center bg-light shadow">
			<div style="width: 98%; min-height: 80px">
				<form method="get" class="w-100 h-100 admin-search-form d-flex align-items-center">
					<select id="searchOption"
							name="searchOption"
							class="form-select border-radius-tr-reset border-radius-br-reset remove-border-focus"
							style="width: 18%">
						<option>Contain</option>
						<option>Equal</option>
					</select>
					<button type="button" class="admin-filter-button btn btn-primary border-radius-reset remove-border-focus"
							style="width: 7%">
						<i class="fa-solid fa-filter"></i>
						<span>Filter</span>
					</button>
					<div class="d-flex w-75 form-control p-0 border-radius-tl-reset border-radius-bl-reset">
						<input type="text"
							   id="searchQuery"
							   name="searchQuery"
							   class="form-control h-100 border-radius-reset border-0 remove-border-focus flex-grow-1" />
						<button type="submit"
								class="form-control admin-search-button remove-border-focus h-100"
								style="width: 45px;">
							<i class="fa-solid fa-magnifying-glass"></i>
						</button>
					</div>
				</form>
			</div>
			<div class="admin-event-table table-responsive-xxl">
				<table class="table admin-table">
					<thead>
						<tr>
							<th class="text-center" style="min-width: 50px; max-width: 50px" scope="col">Id</th>
							<th class="text-center" style="min-width: 150px; max-width: 150px" scope="col">Title</th>
							<th class="text-center" scope="col">Cagetory</th>
							<th class="text-center" scope="col">Organiser</th>
							<th class="text-center" scope="col">Start Date</th>
							<th class="text-center" scope="col">End Date</th>
							<th class="text-center" scope="col">Created Date</th>
							<th class="text-center" scope="col">Modified Date</th>
							<th class="text-center" scope="col">Public</th>
							<th class="text-center" scope="col">Is Deleted</th>
							<th style="min-width: 200px; max-width: 200px" class="text-end" scope="col">Actions</th>
						</tr>
					</thead>
					<!--Model-->
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<th scope="row">@item.Id</th>
								<td>@item.Title</td>
								<td>@item.CategoryEvent.Name</td>
								<td>@item.Organizer.UserName</td>
								<td>@item.StartDate</td>
								<td>@item.EndDate</td>
								<td>@item.CreatedDate</td>
								<td>@item.ModifiedDate</td>
								<td>@item.IsPublic</td>
								<td>@item.IsDeleted</td>
								<td>
									<div class="d-flex flex-wrap justify-content-end" style="gap: 10px">
										<button class="btn btn-warning admin-action-button">
											<i class="fa-solid fa-eye"></i>
											View
										</button>
										<button class="btn btn-primary admin-action-button">
											<i class="fa-solid fa-pen-to-square"></i>
											Edit
										</button>
										<button class="btn btn-danger admin-action-button">
											<i class="fa-solid fa-trash"></i>
											Delete
										</button>
									</div>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</section>
</div>

@section Scripts {
	<script asp-append-version="true" src="~/js/admin/admin-event.js"></script>
}


@{
    ViewData["Title"] = "Privacy Policy";
}
<div class="container-fluid position-relative" style="background: url(https://www.ikeva.com/wp-content/uploads/2016/01/BeerDieEvents.jpg); background-size: cover; background-position: center; height: 30vh; width: 100%;">
    <div class="container">
        <div class="row h-100">
            <div class="col text-white position-absolute" style="bottom: 10px">
                <h1 class="display-4">Event</h1>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand"><i class="bi bi-house-fill" style="font-size: 1.5rem;"></i></a><i style="font-size: 1.5rem">/ Privacy Police</i>
            </div>
        </div>
    </div>
</div>
<div class="container privacy-container mt-5 mb-6">
    <!-- Header -->
    <header class="privacy-header">
        <h1 class="privacy-title">Privacy Policy</h1>
        <p class="privacy-effective-date">Effective date: August 22, 2019</p>
    </header>

    <!-- Content -->
    <main class="privacy-content">
        <!-- Introduction -->
        <section class="privacy-section introduction">
            <p class="privacy-paragraph">
                Eventmie Pro ("us", "we", or "our") operates the
                <a href="https://eventmie-pro.classiebit.com" class="privacy-link">https://eventmie-pro.classiebit.com</a> website
                (hereinafter referred to as the "Service"). This page informs you of our policies regarding the collection, use, and disclosure of personal data when you use our Service.
            </p>
            <p class="privacy-paragraph">
                We use your data to provide and improve the Service. By using the Service, you agree to the collection and use of
                information in accordance with this policy.
            </p>
        </section>

        <!-- Definitions -->
        <section class="privacy-section definitions">
            <h2 class="privacy-subtitle">Definitions</h2>
            <ul class="privacy-list">
                <li><strong>Service:</strong> The Service is the website operated by Eventmie Pro.</li>
                <li><strong>Personal Data:</strong> Data about a living individual who can be identified from that data.</li>
                <li><strong>Usage Data:</strong> Data collected automatically from the Service.</li>
                <li><strong>Cookies:</strong> Small files stored on your device (computer or mobile).</li>
            </ul>
        </section>

        <!-- Information Collection and Use -->
        <section class="privacy-section information-collection">
            <h2 class="privacy-subtitle">Information Collection and Use</h2>
            <p class="privacy-paragraph">
                We collect several different types of information for various purposes to provide and improve our Service to you.
            </p>
        </section>

        <!-- Types of Data Collected -->
        <section class="privacy-section types-of-data">
            <h2 class="privacy-subtitle">Types of Data Collected</h2>
            <h3 class="privacy-subsection-title">Personal Data</h3>
            <p class="privacy-paragraph">
                While using our Service, we may ask you to provide us with certain personally identifiable information that can be used to contact or identify you ("Personal Data"). Examples include:
            </p>
            <ul class="privacy-list">
                <li>Cookies and Usage Data</li>
            </ul>

            <h3 class="privacy-subsection-title">Usage Data</h3>
            <p class="privacy-paragraph">
                We may also collect information on how the Service is accessed and used ("Usage Data"). This Usage Data may include your IP address, browser type, browser version, and more.
            </p>
        </section>
    </main>
</div>

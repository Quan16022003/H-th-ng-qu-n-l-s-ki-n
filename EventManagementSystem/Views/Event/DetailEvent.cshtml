@model Web.ViewModels.DetailEventViewModel

<div class="container-fluid d-flex align-items-end justify-content-center" style="background-image: url(@Model.Details.ThumbnailUrl); background-size: cover; background-position: center; height: 100vh; width: 100%;">
    <div class="container-fluid d-flex align-items-end justify-content-center" style="background-image: url(@Model.Details.ThumbnailUrl); background-size: cover; background-position: center; height: 100vh; width: 100%;">
    </div>
</div>
<div class="container my-5">
    <div class="event-header p-4 rounded shadow-sm mb-4">
        <h2>@Model.Details.Title</h2>
        <p class="text-muted">Prevailed mr tolerably discourse assurance estimable applauded to so. Him everything melancholy uncommonly.</p>
        <div class="tags">
            <span class="badge bg-primary">@Model.Details.VenueName</span>
            <span class="badge bg-info">@Model.Details.City</span>
            <span class="badge bg-secondary">@Model.Details.District</span>
        </div>
    </div>
    <div class="share-buttons mb-4">
        <p>Share Event</p>
        <div class="btn-group">
            <button class="btn btn-outline-primary btn-sm"><i class="fab fa-facebook-f"></i></button>
            <button class="btn btn-outline-info btn-sm"><i class="fab fa-twitter"></i></button>
            <button class="btn btn-outline-success btn-sm"><i class="fab fa-whatsapp"></i></button>
            <button class="btn btn-outline-secondary btn-sm"><i class="fas fa-link"></i></button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8">
            <div class="card p-4 mb-4">
                <h5>Get Tickets Now</h5>
                <div class="badge bg-primary mb-3">Seasonal Tickets</div>
                <h6> THỜI GIAN THAM GIA EVENT SẮP TỚI</h6>
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <h6><a class="nav-link active">@(Model.Details.StartDate.HasValue ? Model.Details.StartDate.Value.ToString("dd/MM/yyyy") : "N/A")</a></h6>
                    </li>

                </ul>
                <div class="p-3">
                    <div class="time-slot">
                        <p><strong>@Model.Details.ModifiedDate</strong></p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="d-grid mb-3">
                <button class="btn btn-primary btn-lg" data-bs-toggle="modal" data-bs-target="#getTicketsModal">Get Tickets Now</button>
            </div>
            <div class="card p-3 mb-3">
                <h6>Where</h6>
                <p>@Model.Details.Address</p>
            </div>
            <div class="card p-3">
                <h6>When</h6>
                <p>
                    @(Model.Details.StartDate.HasValue ? Model.Details.StartDate.Value.ToString("dd/MM/yyyy") : "N/A")
                    -
                    @(Model.Details.EndDate.HasValue ? Model.Details.EndDate.Value.ToString("dd/MM/yyyy") : "N/A")
                </p>

            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="getTicketsModal" tabindex="-1" aria-labelledby="getTicketsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="getTicketsModalLabel">Professional Piano Lessons (Seasonal Pass)</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6>Select Tickets Quantity</h6>
                <div class="ticket-option">
                    <p><strong>Free</strong> - 0.00 USD</p>
                    <select class="form-select" data-price="0" onchange="updateTotals()">
                        <option value="0">0</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                    </select>
                </div>
                <div class="ticket-option">
                    <p><strong>Early Bird</strong> - 300.00 USD</p>
                    <select class="form-select" data-price="300" onchange="updateTotals()">
                        <option value="0">0</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                    </select>
                </div>
                <div class="ticket-option">
                    <p><strong>Regular</strong> - 600.00 USD</p>
                    <select class="form-select" data-price="600" onchange="updateTotals()">
                        <option value="0">0</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                    </select>
                </div>
                <div class="ticket-option">
                    <p><strong>VIP</strong> - 1500.00 USD</p>
                    <select class="form-select" data-price="1500" onchange="updateTotals()">
                        <option value="0">0</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                    </select>
                </div>
                <hr>
                <h6>Cart Total</h6>
                <p>Total tickets: <span id="totalTickets">0</span></p>
                <p>Total order: <span id="totalOrder">0.00 USD</span></p>
                <div class="alert alert-danger mt-3">
                    Please Register or Login to continue
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary w-100">Login</button>
            </div>
        </div>
    </div>
</div>


<div class="container my-5">
    <div class="overview-section p-4 rounded shadow-sm">
        <h4>Overview</h4>
        <p>@Model.Details.Description</p>
    </div>
</div>

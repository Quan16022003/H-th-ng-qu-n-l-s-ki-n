<div class="container my-5">
    <div class="row">
        <div class="col-md-6">
            <div class="gallery-section p-4 rounded shadow-sm">
                <h4>Event Gallery</h4>
                <div class="gallery-grid" width="100%" height="300" style="border:0">
                    <img src="@Model.Details.CoverUrl" alt="Gallery Image 1" class="gallery-img">

                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="location-section p-4 rounded shadow-sm">
                <h4>Location</h4>
                <div class="map-container">
                    <iframe src="https://www.google.com/maps?q=@Model.Details.Latitude,@Model.Details.Longitude&z=15&output=embed"
                            width="100%"
                            height="300"
                            style="border:0;"
                            allowfullscreen=""
                            loading="lazy">
                    </iframe>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="imageModal" class="image-modal" onclick="closeModal()">
    <span class="close">&times;</span>
    <img class="modal-content" id="imgModalContent">
    <div id="caption"></div>
</div>


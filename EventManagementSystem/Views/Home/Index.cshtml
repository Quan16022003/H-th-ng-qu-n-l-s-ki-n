@model Web.ViewModels.HomeViewModel
@{
    ViewData["Title"] = "Home";
}
<div class="hero-section position-relative text-center text-white">
    <video autoplay muted loop playsinline class="hero-background position-absolute w-100 h-100" style="object-fit: cover;">
        <source src="https://cdn.pixabay.com/video/2015/11/07/1275-145116912_medium.mp4" type="video/mp4">
        Trình duyệt của bạn không hỗ trợ video.
    </video>

    <div class="hero-content d-flex flex-column justify-content-center align-items-center position-relative">
        <h1 class="display-4 fw-bold sparkle-text">HÃY THAM GIA SỰ KIỆN NGAY!</h1>
        <div class="d-flex gap-3">
            <a asp-area="Event" asp-controller="Events" asp-action="AllEvent" class="btn btn-primary icon-animation btn-gradient-motion">
                <span class="icon-left">👉</span>
                THAM GIA NGAY
                <span class="icon-right">👈</span>
            </a>
        </div>
    </div>
</div>

<div class="search-bar bg-white p-3 rounded shadow-sm d-flex justify-content-between align-items-center">
    <div class="dropdown">
        <button class="btn btn-light dropdown-toggle" type="button" id="cityDropdown" data-bs-toggle="dropdown" aria-expanded="false">
            Thành phố
        </button>
        <ul class="dropdown-menu" aria-labelledby="cityDropdown">
            <li><a class="dropdown-item" href="#">All</a></li>
        </ul>
    </div>
    <div class="dropdown">
        <button class="btn btn-light dropdown-toggle" type="button" id="categoryDropdown" data-bs-toggle="dropdown" aria-expanded="false">
            Loại sự kiện
        </button>
        <ul class="dropdown-menu" aria-labelledby="categoryDropdown">
            <li><a class="dropdown-item" href="#">All</a></li>
            @foreach(var c in Model.EventCategoríes)
            {
                <li><a class="dropdown-item" asp-controller="Events" asp-action="AllEvent" asp-route-category="@c.Slug" >@c.Name</a></li>
            }
        </ul>
    </div>
    <div class="dropdown">
        <button class="btn btn-light dropdown-toggle" type="button" id="priceDropdown" data-bs-toggle="dropdown" aria-expanded="false">
            Giá
        </button>
        <ul class="dropdown-menu" aria-labelledby="priceDropdown">
            <li><a class="dropdown-item" href="#">Any Price</a></li>
        </ul>
    </div>
    <button  class="btn btn-primary rounded-circle search-button"><i class="fas fa-search"></i></button>
</div>

<div class="container Event my-5">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="section-title">Sự kiện nổi bật</h2>
        <a asp-area="" asp-controller="Events" asp-action="AllEvent" class="view-all-link">Xem tất cả →</a>
    </div>
    <div class="row g-3">
        @foreach(var e in Model.FeaturedEvents)
        {
            <div class="col-md-4">
                <partial name="Home/_ProductItem" , model="e"/>
            </div>   
        }
    </div>
</div>


<div class="container Event my-5 ">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="section-title">Sự kiện bán chạy nhất</h2>
        <a asp-area="" asp-controller="Events" asp-action="AllEvent" class="view-all-link">Xem tất cả →</a>
    </div>

    <div class="row g-3">
        @foreach(var e in Model.BestSellerEvents)
        {
        <div class="col-md-4">
            <partial name="Home/_ProductItem" , model="e"/>
        </div>
        }
    </div>
</div>

<div class="container Event my-5">
    <div class="d-flex justify-content-between align-items-center">
        <h2 class="section-title">Sự kiện sắp tới</h2>
        <a asp-area="" asp-controller="Events" asp-action="AllEvent" class="view-all-link">Xem tất cả →</a>
    </div>
    <div class="row g-3">
        @foreach(var e in Model.UpcomingEvents)
        {
        <div class="col-md-4">
            <partial name="Home/_ProductItem" , model="e"/>
        </div>
        }
    </div>
</div>
<div class="event-categori" style="background: linear-gradient(to bottom, #00416A, #00C9FF);">
    <div class="container my-6 mt-5" data-aos="fade-up" data-aos-duration="1000" data-aos-delay="100" data-aos-once="true">
        <h2 class="text-white mb-4">Danh mục sự kiện</h2>
        <div class="row">
            @foreach(var c in Model.EventCategoríes)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card bg-dark text-white">
                        <img src="@c.ThumbnailUrl" class="card-img" alt="@c.Name">
                        <div class="card-img-overlay">
                            <h5 class="card-title">@c.Name</h5>

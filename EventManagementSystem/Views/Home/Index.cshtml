@{
    ViewData["Title"] = "Home";
}
<div class="container-fluid d-flex align-items-end justify-content-center" style="background-image: url('https://eventmie.classiebit.com/storage/banners/February2024/sJ1ldFeRtco63Jh5IPVP.webp'); background-size: cover; background-position: center; height: 70vh; width: 100%;">
    <div class="text-center text-white" style="margin-bottom: 150px">
        <h1 class="display-4">Event Planning Platform Reimagined 2.0</h1>
        <p class="lead">Laravel 2024</p>
        <a asp-area="Event" asp-controller="Event" asp-action="AllEvent" class="btn btn-outline-light btn-lg me-2">Join Now!</a>
    </div>
</div>
<div class="container my-4 custom-container">
    <form class="row g-3">
        <div class="col-md-5">
            <input type="text" class="form-control home-form-control" placeholder="City" aria-label="City">
        </div>
        <div class="col-md-5">
            <select class="form-control home-form-control" aria-label="Category">
                <option selected disabled>Category</option>
                <option value="1">Music</option>
                <option value="2">Sports</option>
                <option value="3">Conference</option>
            </select>
        </div>
        <div class="col-md-2 text-end">
            <button class="btn btn-primary rounded-circle btn-lg search-btn" type="submit">
                <i class="fas fa-search"></i> 
            </button>
        </div>
    </form>
</div>
<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-center mb-0">Top Selling Events</h2>
        <a asp-area="Event" asp-controller="Event" asp-action="AllEvent" class="btn btn-outline-primary btn-view-all">View All</a>
    </div>
    <div id="eventCarousel" class="carousel slide" data-bs-ride="carousel" data-bs-interval="3000">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card">
                            <img src="https://eventmie.classiebit.com/storage/events/February2024/1708931876tEowZd61OR.webp" class="card-img-top" alt="Event 1">
                            <div class="card-body">
                                <h5 class="card-title">Event 1</h5>
                                <p class="card-text">Description for event 1.</p>
                                <div class="text-center">
                                    <button class="btn btn-primary">View Event</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <img src="https://eventmie.classiebit.com/storage/events/February2024/1708931841fkE9ZMktx3.webp" class="card-img-top" alt="Event 2">
                            <div class="card-body">
                                <h5 class="card-title">Event 2</h5>
                                <p class="card-text">Description for event 2.</p>
                                <div class="text-center">
                                    <button class="btn btn-primary">View Event</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <img src="https://eventmie.classiebit.com/storage/events/February2024/1708931705BKDa7TQyir.webp" class="card-img-top" alt="Event 3">
                            <div class="card-body">
                                <h5 class="card-title">Event 3</h5>
                                <p class="card-text">Description for event 3.</p>
                                <div class="text-center">
                                    <button class="btn btn-primary">View Event</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="carousel-item">
                <div class="row">
                    <div class="col-md-4">
                        <div class="card">
                            <img src="https://eventmie.classiebit.com/storage/events/February2024/1708931600o7zWqZqtwt.webp" class="card-img-top" alt="Event 4">
                            <div class="card-body">
                                <h5 class="card-title">Event 4</h5>
                                <p class="card-text">Description for event 4.</p>
                                <div class="text-center">
                                    <button class="btn btn-primary">View Event</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card">
                            <img src="https://eventmie.classiebit.com/storage/events/February2024/1708931794bBmrl2N2OQ.webp" class="card-img-top" alt="Event 5">
                            <div class="card-body">
                                <h5 class="card-title">Event 5</h5>
                                <p class="card-text">Description for event 5.</p>
                                <div class="text-center">
                                    <button class="btn btn-primary">View Event</button>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
        <button class="carousel-control-prev" style="left: -150px" type="button" data-bs-target="#eventCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" style="right: -150px" type="button" data-bs-target="#eventCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>

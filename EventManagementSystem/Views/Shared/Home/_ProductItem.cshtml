@model Constracts.Home.HomeEventDto

<div class="event-card">
    <a asp-area="" asp-controller="Events" asp-action="DetailEvent" asp-route-slug="@Model.Slug" style="text-decoration: none;">
        <div class="event-image" style="background-image: url('@Model.ThumbnailUrl');">
            <span class="event-date">@Model.StartDate?.ToString("dd MMM yyyy")</span>
        </div>

        <div class="event-content">
            <h3 class="event-title">@Model.Title</h3>
            <p class="event-category">@Model.CategoryName</p>
            <p class="event-location">
                <i class="fas fa-map-marker-alt"></i>
                @Model.VenueName
            </p>
            <p class="event-price">
                Giá chỉ từ <span>@Model.MinTicketPrice.ToString("N0")</span> đ
            </p>
        </div>
    </a>
</div>

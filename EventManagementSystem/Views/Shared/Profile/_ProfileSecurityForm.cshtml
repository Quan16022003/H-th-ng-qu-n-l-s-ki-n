@{

}

<form class="w-100" asp-area="" asp-controller="Profile" asp-action="UpdatePersonalSecurity" method="post">
	<div class="w-100 d-flex">
		<label class="w-25 profile-form-label" for="Cur-Password">Current Password</label>
		<input class="w-75 h-100 form-control align-self-end border border-subtle"
			   type="password"
			   id="Cur-Password"
			   name="Cur-Password" />
	</div>
	<br />
	<div class="w-100 d-flex">
		<label class="w-25 profile-form-label" for="New-Password">New Password</label>
		<input class="w-75 h-100 form-control align-self-end border border-subtle"
			   type="password"
			   id="New-Password"
			   name="New-Password" />
	</div>
	<br />
	<div class="w-100 d-flex">
		<label class="w-25 profile-form-label" for="Confirm-Password">Confirm Password</label>
		<input class="w-75 h-100 form-control align-self-end border border-subtle"
			   type="password"
			   id="Confirm-Password"
			   name="Confirm-Password" />
	</div>
	<br />
	<div class="w-100 d-flex flex-column">
		<div class="w-75 align-self-end">
			<button class="btn btn-primary"
					style="border-radius: 10px"
					type="submit">
				<i class="fas fa-sd-card"></i>
				<span>Save</span>
			</button>
		</div>
	</div>
</form>
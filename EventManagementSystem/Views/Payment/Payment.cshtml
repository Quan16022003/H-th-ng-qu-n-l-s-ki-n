@page
@model Constracts.DTO.PaymentInfomationDTO;
@{
    ViewData["Title"] = "Create Payment URL";
}

<h1>Create Payment URL</h1>

<form method="post" asp-action="CreatePaymentUrlVnpay">
    <div>
        <label for="Amount">Amount:</label>
        <input type="number" id="Amount" name="Amount" required />
    </div>
    <div>
        <label for="Name">Name:</label>
        <input type="text" id="Name" name="Name" required />
    </div>
    <div>
        <label for="OrderDescription">Order Description:</label>
        <input type="text" id="OrderDescription" name="OrderDescription" required />
    </div>
    <div>
        <label for="OrderType">Order Type:</label>
        <input type="text" id="OrderType" name="OrderType" required />
    </div>
    <button type="submit">Create Payment URL</button>
</form>